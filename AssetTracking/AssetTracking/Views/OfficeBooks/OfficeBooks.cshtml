@using AssetTracking.Models;

@{
    ViewData["Title"] = "OfficeBooks";
}
<div id="result" role="alert"></div>
<h1>Office Books</h1>

<div class="text-left">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#EditBookForm" onclick="AddOfficeBook()">
        Add Office Book
    </button>
</div>

<!-- Table with panel -->
<h5>Available Books</h5>
<div class="px-4">
    <div class="table-wrapper">
        <!--Table-->
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="tableBooks">

                <!--Table head-->
                <thead>
                    <tr>
                        <th class="th-lg" style="display:none">
                            Book ID
                        </th>
                        <th class="th-lg">
                            ISBN
                        </th>
                        <th class="th-lg">
                            Book Title
                        </th>
                        <th class="th-lg">
                            Author
                        </th>
                        <th class="th-lg">
                            Description
                        </th>
                        <th class="th-lg">
                        </th>
                        <th class="th-lg">
                        </th>
                    </tr>
                </thead>
                <!--Table head-->
            </table>
            <!--Table-->
        </div>
    </div>
</div>

<div class="modal fade" id="EditBookForm" tabindex="-1" role="dialog" aria-labelledby="Edit" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog " role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header darken-3 white-text" style="background-color:#2bbbad">
                <h4 class="modal-title"><i class="fas fa-pencil-alt"></i> <span id="change"></span> Office Book</h4>
                <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <!--Body-->
            <div class="modal-body mb-0">
                <p style="font-size:16px;" id="warnMessage"></p>
                <form id="bookForm">
                    <div class="md-form form-sm">
                        <input type="text" id="ItemId" name="ItemId" class="form-control" style="display:none">
                        <input type="text" id="ISBN" name="ISBN" class="form-control">
                        <label for="form8" class="active">Book ISBN</label>
                    </div>

                    <div class="md-form form-sm">
                        <input type="text" id="Title" name="Title" class="form-control">
                        <label for="form9" class="active">Book Title</label>
                    </div>
                    <div class="md-form form-sm">
                        <input type="text" id="Author" name="Author" class="form-control">
                        <label for="form9" class="active">Book Author</label>
                    </div>

                    <div class="md-form form-sm">
                        <input type="text" id="Description" name="Description" class="form-control">
                        <label for="form9" class="active">Description</label>
                    </div>
                    <div class="text-center mt-1-half">

                        <button type="button" id="SubmitUpdateOfficeBook" class="btn btn-info mb-2 waves-effect waves-light">Update<i class="fas fa-send ml-1"></i></button>
                        <button type="button" id="SubmitNewOfficeBook" class="btn btn-info mb-2 waves-effect waves-light">Add<i class="fas fa-send ml-1"></i></button>
                        <button type="button" id="SubmitDeleteOfficeBook" class="btn btn-info mb-2 waves-effect waves-light">Delete<i class="fas fa-send ml-1"></i></button>

                    </div>
                </form>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!--Borrowing modal-->
<div class="modal fade" id="BorrowFormModal" tabindex="-1" role="dialog" aria-labelledby="BorrowBook" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog cascading-modal" role="document">
        <!--Content-->
        <div class="modal-content">

            <!--Header-->
            <div class="modal-header darken-3 white-text" style="background-color:#2bbbad">
                <h4 class="title"><i class="fas fa-pencil-alt"></i> Borrow Book</h4>
                <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <!--Body-->
            <form>
                <div class="modal-body mb-0">
                    <div class="md-form form-sm">
                        <input type="text" id="bookId" name="ItemId" class="form-control" style="display:none">
                        <input type="text" id="bookISBN" class="form-control">
                        <label for="form8" class="active">Book ISBN</label>
                    </div>

                    <div class="md-form form-sm">
                        <input type="text" id="bookTitle" class="form-control">
                        <label for="form9" class="active">Book Title</label>
                    </div>

                    <div class="md-form form-sm">
                        <input type="text" id="bookAuthor" class="form-control">
                        <label for="form9" class="active">Author</label>
                    </div>

                    <div class="md-form form-sm">
                        <input type="date" id="borrowDate" class="form-control" data-date-format="dd/mm/yyyy">
                        <label for="form9" class="active">Borrow Date </label>
                    </div>
                    <div class="md-form form-sm">
                        <input type="date" id="returnDate" class="form-control">
                        <label for="form9" class="active">Return Date </label>
                    </div>
                    <div class="text-center mt-1-half">
                        <button id="SubmitBorrowBook" type="button" class="btn btn-info mb-2 waves-effect waves-light">Borrow<i class="fas fa-send ml-1"></i></button>
                    </div>

                </div>
            </form>
        </div>
        <!--/.Content-->
    </div>
</div>

